{
  "name": "zynx-lovable-prompts-generator",
  "version": "1.0.0",
  "description": "AI-powered prompt generator for Lovable.AI - Create perfect prompts for images, icons, and UI components",
  "author": "Zynx <zynx@zynxdata.com>",
  "license": "MIT",
  "keywords": [
    "lovable.ai",
    "prompts",
    "generator",
    "ai",
    "ui",
    "react",
    "lucide-icons",
    "tailwind"
  ],
  "homepage": "https://github.com/zynx-ai/lovable-prompts-generator",
  "repository": {
    "type": "git",
    "url": "https://github.com/zynx-ai/lovable-prompts-generator.git"
  },
  "bugs": {
    "url": "https://github.com/zynx-ai/lovable-prompts-generator/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:coverage": "vitest --coverage",
    "analyze": "npm run build && npx vite-bundle-analyzer dist",
    "lighthouse": "lhci autorun",
    "size-check": "size-limit",
    "encoding-check": "npx iconv-cli check src/**/*.{js,jsx,ts,tsx,md}",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,json,css,md}",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "lovable-tagger": "^1.1.9",
    "lucide-react": "^0.300.0",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@size-limit/preset-app": "^11.0.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "size-limit": "^11.0.1",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^1.0.4"
  },
  "size-limit": [
    {
      "name": "Main Bundle",
      "path": "dist/assets/*.js",
      "limit": "180 kB",
      "gzip": true
    },
    {
      "name": "CSS Bundle",
      "path": "dist/assets/*.css",
      "limit": "50 kB",
      "gzip": true
    }
  ],
  "lighthouse": {
    "ci": {
      "collect": {
        "url": [
          "http://localhost:5173"
        ],
        "numberOfRuns": 3
      },
      "assert": {
        "assertions": {
          "categories:performance": [
            "error",
            {
              "minScore": 0.9
            }
          ],
          "categories:accessibility": [
            "error",
            {
              "minScore": 0.9
            }
          ],
          "categories:best-practices": [
            "error",
            {
              "minScore": 0.9
            }
          ],
          "categories:seo": [
            "error",
            {
              "minScore": 0.8
            }
          ]
        }
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
